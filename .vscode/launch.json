    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest ALL",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-x",
                "--ignore=examples"
            ],
            "env": {"PYTHONPATH": "${workspaceFolder}/src:/opt/ros/galactic/lib/python3.8/site-packages:${env:PYTHONPATH}"}
        },
        {
            "name": "Pytest Last Failed",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--lf"
            ],
            "env": {"PYTHONPATH": "${workspaceFolder}/src:/opt/ros/galactic/lib/python3.8/site-packages:${env:PYTHONPATH}"}
        },
        {
            "name": "Pytest Current File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-x", "-s", "-v", "${file}"],
            "env": {"PYTHONPATH": "${workspaceFolder}/src:/opt/ros/galactic/lib/python3.8/site-packages:${env:PYTHONPATH}"}
        },
    ]
}
